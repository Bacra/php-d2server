{
	"name": "Create HTML By PHP",
	"version": "1.0",
	"description": "快速切换成http://127.0.0.1本地Apache模式",
	"background": { "scripts": ["background.js"] },
	"page_action" :
	{
		"default_icon" : "icon-19.png",
		"default_title" : "运行服务器模式"
		//"default_title" : "运行服务器模式",
		//"default_popup": "popup.html"
	},
	"permissions" : [
		"tabs"
	],
	"icons" : {
		"48" : "icon-48.png",
		"128" : "icon-128.png"
	},
	"content_scripts" : [
		{
			"matches" : [
				"*://127.0.0.1/*"
			],
			"js" : ["contentscript.js"],
			"all_frames" : true
		}
	],
	"manifest_version": 2
}